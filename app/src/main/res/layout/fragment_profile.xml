<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/blue"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civUserImage"
                    android:src="@color/red"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
                <TextView
                    android:id="@+id/tvChangePicture"
                    android:text="Change Picture"
                    android:textColor="#FFFFFF"
                    android:drawableLeft="@android:drawable/ic_menu_camera"
                    android:drawableStart="@android:drawable/ic_menu_camera"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="BIO"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/ivEditBio"
                        android:src="@android:drawable/ic_menu_edit"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <TextView
                    android:id="@+id/tvUserName"
                    android:text="SAMRAJ AGARWAL"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_margin="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvUserAgeYear"
                            android:text="21"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="yrs"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="#FFFFFF"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvUserAgeMonth"
                            android:text="4"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="mnths"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="#FFFFFF"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvUserAgeDay"
                            android:text="2"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="days"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="#FFFFFF"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvUserWeight"
                            android:text="64.5"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Spinner
                            android:id="@+id/spinnerWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvUserHeight"
                            android:text="168"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Spinner
                            android:id="@+id/spinnerHeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="BMI: "
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="23.64"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvUserGender"
                        android:text="Male"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_margin="3dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="DETAILS"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/ivEditDetails"
                    android:src="@android:drawable/ic_menu_edit"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cvDiseasesAndAllergies"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/red"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Diseases\nAnd\nAlergies"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:layout_margin="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/cvMedicinesAndVaccines"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/green"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Medicines\nAnd\nVaccines"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:layout_margin="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cvMedicalHistory"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/blue"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Medical\nHistory\n(Pics also)"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:layout_margin="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/cvEmergencyContacts"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/accent"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Emergency Contacts"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:layout_margin="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/tvSOS"
                android:text="SOS"
                android:background="@color/red"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>