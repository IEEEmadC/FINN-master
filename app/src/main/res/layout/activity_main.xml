<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pa.finn.MainActivity">

    <RelativeLayout
        android:background="@color/accent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivSettings"
            android:onClick="onMainActivityClickListener"
            android:src="@android:drawable/ic_menu_preferences"
            android:contentDescription="Settings"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/logo"
            android:contentDescription="Logo"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <LinearLayout
            android:id="@+id/llProfile"
            android:onClick="onMainActivityClickListener"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Hello,"
                    android:textColor="#FFFFFF"
                    android:fontFamily="cursive"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@mipmap/ic_launcher_round"
                app:civ_border_width="2dp"
                app:civ_border_color="#9bbeb5"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:background="#ffffff"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/blue"
            android:id="@+id/llLocate"
            android:onClick="onMainActivityClickListener"
            android:padding="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@android:drawable/ic_dialog_map"
                android:contentDescription="Locate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:background="@color/red"
            android:id="@+id/llHome"
            android:onClick="onMainActivityClickListener"
            android:padding="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@android:drawable/ic_dialog_dialer"
                android:contentDescription="Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:background="@color/green"
            android:id="@+id/llShop"
            android:onClick="onMainActivityClickListener"
            android:padding="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@android:drawable/ic_dialog_email"
                android:contentDescription="Shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
